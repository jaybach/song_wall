<% if session[:error] %>
  <div>
    <strong>Sorry, but we were unable to log you in</strong>
      <p><%= session[:error] %></p>
  </div>
<% end %>

<form method="post" action="/users/login">
  <div>
    <label>User name:</label>
    <input type="text" id= "name" name="name" placeholder="enter user name..." required><br>
  </div>
  <div>
    <label>Password:</label>
    <input type="text" id="password" name="password" placeholder="enter password..." required><br>
  </div>
  <div>
    <input type="submit" value="Log in">
  </div>
</form>
